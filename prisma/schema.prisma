generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Basic User model

model user {
  id       Int    @id @default(autoincrement())
  name     String @db.VarChar(225)
  email    String @unique
  password String @db.VarChar(225)
}
